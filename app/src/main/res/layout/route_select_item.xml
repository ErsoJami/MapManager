<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <TextView
        android:id="@+id/RouteNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:text="Not stated"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/RouteDescriptionTable"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="14dp"
        android:background="@drawable/rounded"
        android:backgroundTint="@color/grey"
        android:elevation="1dp"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@+id/RouteNameText"
        app:layout_constraintEnd_toStartOf="@+id/postButtonView"
        app:layout_constraintStart_toEndOf="@+id/RouteNameText"
        app:layout_constraintTop_toTopOf="@+id/RouteNameText" />

    <TextView
        android:id="@+id/DescriptionTextView"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:text="ZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZZ"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/RouteDescriptionTable"
        app:layout_constraintEnd_toEndOf="@+id/RouteDescriptionTable"
        app:layout_constraintStart_toStartOf="@+id/RouteDescriptionTable"
        app:layout_constraintTop_toTopOf="@+id/RouteDescriptionTable" />

    <View
        android:id="@+id/postButtonView"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginEnd="10dp"
        android:background="@color/green_light"
        android:elevation="1dp"
        android:translationZ="-1dp"
        app:layout_constraintBottom_toBottomOf="@+id/RouteNameText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/RouteNameText" />

    <TextView
        android:id="@+id/postButtonText"
        android:layout_width="38dp"
        android:layout_height="22dp"
        android:text="POST"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/postButtonView"
        app:layout_constraintEnd_toEndOf="@+id/postButtonView"
        app:layout_constraintStart_toStartOf="@+id/postButtonView"
        app:layout_constraintTop_toTopOf="@+id/postButtonView" />
</androidx.constraintlayout.widget.ConstraintLayout>